<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#56AB91"
    tools:context=".feature.signup.EmailVerification">

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="120dp"
      android:layout_marginTop="98dp"
      android:layout_marginEnd="120dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/ic_verif_email_" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/poppins_semibold"
      android:text="Verifikasi Email Kamu!"
      android:textSize="16dp"
      app:layout_constraintEnd_toEndOf="@+id/imageView3"
      app:layout_constraintStart_toStartOf="@+id/imageView3"
      app:layout_constraintTop_toBottomOf="@+id/imageView3" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="225dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:fontFamily="@font/poppins_regular"
      android:gravity="center"
      android:text="Masukkan 4 Digit Nomor Yang Dikirimkan Ke Email"
      app:layout_constraintEnd_toEndOf="@+id/textView6"
      app:layout_constraintStart_toStartOf="@+id/textView6"
      app:layout_constraintTop_toBottomOf="@+id/textView6" />

  <io.bitfactory.pincodelayout.PinCodeLayout
      android:id="@+id/pinCodeLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      app:activeBarColor="@color/white"
      app:filledPinIcon="@drawable/ic_otp_box"
      app:inputBackground="@color/white"
      app:layout_constraintEnd_toEndOf="@+id/textView7"
      app:layout_constraintStart_toStartOf="@+id/textView7"
      app:layout_constraintTop_toBottomOf="@+id/textView7"
      app:pinLength="4"
      app:pinTextColor="@color/black"
      app:pinType="digits"
      app:unfilledPinIcon="@drawable/ic_otp_box" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="96dp"
      android:fontFamily="@font/poppins_regular"
      android:text="Kirim Ulang Kode"
      android:textColor="#FF0000"
      app:layout_constraintEnd_toEndOf="@+id/tPiwError"
      app:layout_constraintStart_toStartOf="@+id/tPiwError"
      app:layout_constraintTop_toBottomOf="@+id/pinCodeLayout" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_verif"
      android:layout_width="145dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:backgroundTint="@color/bg_button_selector"
      android:fontFamily="@font/poppins_regular"
      android:text="Selanjutnya"
      android:textColor="#FFFFFF"
      app:layout_constraintEnd_toEndOf="@+id/textView8"
      app:layout_constraintStart_toStartOf="@+id/textView8"
      app:layout_constraintTop_toBottomOf="@+id/textView8" />

  <ImageView
      android:id="@+id/impiw_email"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginTop="63dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/ic_arrow_back" />

  <TextView
      android:id="@+id/tPiwError"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/poppins_regular"
      android:text="Maaf kode anda tidak sesuai"
      android:textColor="#FF0000"
      app:layout_constraintEnd_toEndOf="@+id/pinCodeLayout"
      app:layout_constraintStart_toStartOf="@+id/pinCodeLayout"
      app:layout_constraintTop_toBottomOf="@+id/pinCodeLayout" />

  <TextView
      android:id="@+id/tPiwTimer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="@+id/tPiwError"
      app:layout_constraintStart_toStartOf="@+id/tPiwError"
      app:layout_constraintTop_toBottomOf="@+id/tPiwError" />


</androidx.constraintlayout.widget.ConstraintLayout>