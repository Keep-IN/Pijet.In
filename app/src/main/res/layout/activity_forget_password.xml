<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.ForgetPass.ForgetPassword">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBackForget"
        android:layout_width="10dp"
        android:layout_height="17dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_hitam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivLogoForget"
        android:layout_width="38dp"
        android:layout_height="18dp"
        android:layout_marginTop="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_ijo" />

    <TextView
        android:id="@+id/tvJudulForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Ubah kata sandi"
        app:layout_constraintEnd_toEndOf="@+id/ivLogoForget"
        app:layout_constraintStart_toStartOf="@+id/ivLogoForget"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoForget" />

    <TextView
        android:id="@+id/tvOpenForget"
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Silahkan masukan alamat email anda untuk menerima kode verifikasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJudulForget" />

    <TextView
        android:id="@+id/tvEmailForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Masukan email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOpenForget" />

    <TextView
        android:id="@+id/tvBintangForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="*"
        android:textColor="#E21F30"
        app:layout_constraintStart_toEndOf="@+id/tvEmailForget"
        app:layout_constraintTop_toBottomOf="@+id/tvOpenForget" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEmailForget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvEmailForget"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailForget">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="125dp"
        android:backgroundTint="@color/bg_button_selector"
        android:fontFamily="@font/poppins_regular"
        android:text="Selanjutnya"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilEmailForget" />

</androidx.constraintlayout.widget.ConstraintLayout>