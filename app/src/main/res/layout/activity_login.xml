<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".feature.Login.Login">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPwLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvPwLogin"
        app:layout_constraintTop_toBottomOf="@+id/tvPwLogin"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#56AB91">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:inputType="textPassword"
            android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz1234567890"
            android:textSize="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/ivLogoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/tvJudulLogin"
        app:layout_constraintStart_toStartOf="@+id/tvJudulLogin"
        app:layout_constraintTop_toBottomOf="@+id/tvJudulLogin"
        android:src="@drawable/logo_pijit" />

    <TextView
        android:id="@+id/tvJudulLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Silahkan Log in dulu yah"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_regular"
        android:text=" Masukkan email "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoLogin" />

    <TextView
        android:id="@+id/tvBintang1Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif"
        android:text="*"
        android:textColor="#E21F30"
        app:layout_constraintBottom_toTopOf="@+id/tilEmailLogin"
        app:layout_constraintStart_toEndOf="@+id/tvEmailLogin" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEmailLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvEmailLogin"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailLogin">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_field"
            android:textSize="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvPwLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Masukkan kata sandi anda "
        app:layout_constraintStart_toStartOf="@+id/tilEmailLogin"
        app:layout_constraintTop_toBottomOf="@+id/tilEmailLogin" />

    <TextView
        android:id="@+id/tvBintang2Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_regular"
        android:text="*"
        android:textColor="#E21F30"
        app:layout_constraintBottom_toTopOf="@+id/tilPwLogin"
        app:layout_constraintStart_toEndOf="@+id/tvPwLogin" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMasukLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="122dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="122dp"
        android:backgroundTint="@color/bg_button_selector"
        android:fontFamily="@font/poppins_regular"
        android:text="Masuk"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilPwLogin" />

    <TextView
        android:id="@+id/tvLupaPwLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Lupa kata sandi ?"
        android:textColor="#E21F30"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/btnMasukLogin"
        app:layout_constraintStart_toStartOf="@+id/btnMasukLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnMasukLogin" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBackLogin"
        android:layout_width="10dp"
        android:layout_height="17dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <ProgressBar
        android:id="@+id/pbLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#358F80"
        android:elevation="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgLoading" />

    <FrameLayout
        android:id="@+id/bgLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4F000000"
        android:elevation="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>